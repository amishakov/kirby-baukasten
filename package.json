{
  "name": "@coralic/kirby-baukasten",
  "version": "3.0.0",
  "description": "An opinionated, supercharged version of the Kirby CMS Plainkit",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "kirby": "env-cmd --use-shell \"php -S \\$KIRBY_DEV_HOSTNAME:\\$KIRBY_DEV_PORT -t public kirby/router.php\"",
    "dev": "shx touch src/.lock && concurrently -n \"php,vite\" \"pnpm:kirby\" \"vite\"",
    "build": "shx rm -f src/.lock && vite build"
  },
  "devDependencies": {
    "@types/node": "^20.1.1",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "dotenv": "^16.0.3",
    "env-cmd": "^10.1.0",
    "eslint": "^8.40.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fontaine": "^0.3.1",
    "postcss": "^8.4.23",
    "postcss-logical": "^6.1.0",
    "prettier": "2.8.8",
    "sass": "^1.62.1",
    "shx": "^0.3.4",
    "stylelint": "^15.6.1",
    "stylelint-config-standard-scss": "^9.0.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.5",
    "vite-plugin-full-reload": "^1.0.5"
  },
  "dependencies": {
    "tachyonjs": "^2.0.1",
    "unlazy": "^0.8.9"
  }
}
